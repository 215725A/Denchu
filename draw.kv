<BatScreen>
    name:'battle'
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            source:root.Image
            allow_stretch: True
            kep_ratio: True
            size_hint_y:3

        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Label:
                text:'デンチュウのHP:'+root.den_HP 
                size_hint_y:0.2
            
            Label:
                text:'相手モンスターのHP:'+root.mon_HP
                size_hint_y:0.2

        Label:
            text:root.oppName+'が現れた！'
            size_hint_y:0.3

        Label:
            text:'コマンドを選択してください。'
            size_hint_y:0.3

       

        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Button
                text:'アイテム'
                size_hint_y:1
                on_press:
                    root.manager.current = 'aitem'

            Button
                text:'戦う'
                size_hint_y:1
                on_press:
                    root.manager.current = 'skill'
            
            Button
                text:'逃げる'
                size_hint_y:1
                on_press:
                    root.manager.current = 'escape'

<AitemScreen>
    name:'aitem'
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            source:root.Image
            allow_stretch: True
            kep_ratio: True
            size_hint_y:2.5

        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Label:
                text:'デンチュウのHP:'+root.den_HP 
                size_hint_y:0.2
            
            Label:
                text:'相手モンスターのHP:'+root.mon_HP
                size_hint_y:0.2

        Label:
            text:root.aitemText1
            size_hint_y:0.3

        Label:
            text:root.aitemText2
            size_hint_y:0.3

        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Button
                text:'戻る'
                size_hint_x:0.3
                on_press:
                    root.manager.current = 'battle'

            Button
                text:'おでん'
                on_press:
                    root.pressOden()
                size_hint_y:1

            Button
                text:'バッテリー'
                on_press:
                    root.pressBatt()
                size_hint_y:1

            Button
                text:'相手のターンへ'
                on_press:
                    root.manager.current = 'enemy_turn'
                size_hint_x:0.5

