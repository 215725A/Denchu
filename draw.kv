<SelScreen>: 
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        
        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Image:
                source:"red_denchu.png"
                allow_stretch: True
                kep_ratio: True
                size_hint_y:1 

            Image:
                source:"yellow_denchu.jpeg"
                allow_stretch: True
                kep_ratio: True 
                size_hint_y:1

            Image:
                source:"green_denchu.jpeg"
                allow_stretch: True
                kep_ratio: True
                size_hint_y:1

        Label:
            text: 'モンスターを一体選択してください。'
            size_hint_y:0.5
        

        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Button:
                text:'赤色デンチュウ' 
                on_press:
                    root.manager.current = 'decision_red'
                    root.pressRed()
                size_hint_y:1

            Button:
                text: '黄色デンチュウ'
                on_press:
                    root.manager.current = 'decision_yellow'
                size_hint_y:1

            Button:
                text: '緑色デンチュウ'
                on_press:
                    root.manager.current = 'decision_green'
                size_hint_y:1
            

<DecScreen_red>　
    name:'decision_red'
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            source:"red_denchu.png"
            allow_stretch: True
            kep_ratio: True
            size_hint_y:1

        Label:
            id: label_up
            text:'このモンスターでよろしいですか？'
            size_hint_y:0.5

        Label:
            id: label_down
            text:'赤色デンチュウ：緑色のモンスターに強く、黄色のモンスターに弱い'
            size_hint_y:0.5 

        BoxLayout:
            orientation: 'horizontal'
            size: root.size

            Button
                text:'選び直す！'
                size_hint_y:1
                on_press:
                    root.manager.current = 'select'

            Button
                text:'赤色デンチュウに決めた！'
                size_hint_y:1
                on_press:
                    root.manager.current = 'battle'

